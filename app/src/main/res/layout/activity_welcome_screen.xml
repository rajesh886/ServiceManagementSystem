<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/welcome"
    android:layout_height="match_parent"
    tools:context=".WelcomeScreen">


    <TextView
        android:layout_width="377dp"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/black_ops_one"
        android:text="SERVICE MANAGEMENT SYSTEM"
        android:textColor="#2B2F31"
        android:textSize="32dp" />

    <Button
        android:id="@+id/customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="431dp"
        android:background="@drawable/custom_button"
        android:drawableTop="@drawable/ic_help"
        android:fontFamily="@font/cardo"
        android:text="Customer"
        android:textSize="24dp" />

    <Button
        android:id="@+id/vendor"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="231dp"
        android:layout_marginTop="433dp"
        android:drawableTop="@drawable/ic_seller"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/cardo"
        android:text="Vendor"
        android:textSize="24dp" />
</RelativeLayout>